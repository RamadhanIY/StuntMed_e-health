<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/child_item"
            android:backgroundTint="@color/bluebuttoncolor"
            app:cardCornerRadius="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

            </Button>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="10dp"
                        android:id="@+id/pic_baby"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="0dp">

                    </de.hdodenhof.circleimageview.CircleImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/title_nama_anak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama Anak"
                                style="@style/HomePageFontStyle"
                                android:textColor="@color/white"
                                android:textSize="25sp">
                            </TextView>
                            <ImageView
                                android:id="@+id/gender_anak"
                                android:layout_margin="5dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp">

                            </ImageView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="5dp"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"

                            android:background="@drawable/rounded">

                            <ImageView
                                android:id="@+id/pic_category"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/baby_icons">

                            </ImageView>

                            <TextView
                                android:id="@+id/kategori_stunting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/NameBabyFontStyle"
                                android:text="Kategori Stunting"
                                android:textColor="@color/bluemaincolor"
                                android:textSize="15sp">

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/layout_berat"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/circle_berat"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="100dp">
                            <TextView
                                android:id="@+id/info_berat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="3"
                                android:textAlignment="center"
                                android:gravity="center">

                            </TextView>

                        </androidx.cardview.widget.CardView>
                        <TextView
                            style="@style/ProfilePageFontStyle"
                            android:layout_below="@id/circle_berat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Berat Badan"
                            android:textSize="13sp"
                            android:textAlignment="center">

                        </TextView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_tinggi"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/circle_tinggi"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="100dp">
                            <TextView
                                android:id="@+id/info_tinggi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="3"
                                android:textAlignment="center"
                                android:gravity="center">

                            </TextView>

                        </androidx.cardview.widget.CardView>
                        <TextView
                            style="@style/ProfilePageFontStyle"
                            android:layout_below="@id/circle_tinggi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tinggi Badan"
                            android:textSize="13sp"
                            android:textAlignment="center">

                        </TextView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layout_lk"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/circle_lk"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="100dp">
                            <TextView
                                android:id="@+id/info_lk"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="3"
                                android:textAlignment="center"
                                android:gravity="center">

                            </TextView>

                        </androidx.cardview.widget.CardView>
                        <TextView
                            style="@style/ProfilePageFontStyle"
                            android:layout_below="@id/circle_lk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lingkar Kepala"
                            android:textSize="13sp"
                            android:textAlignment="center">

                        </TextView>

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>





        </androidx.cardview.widget.CardView>



    </LinearLayout>

</RelativeLayout>