<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="#E9E9E9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="260dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#5A74FF"
                    android:scaleType="fitXY"
                    android:srf="@drawable/radius"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="-6dp" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="75dp"
                    android:background="#FFFFFF"
                    android:scaleType="fitXY"
                    android:srf="@drawable/radius"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="184dp" />

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="37dp"
                    android:autoSizeTextType="uniform"
                    android:text="Hello Taylor !"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="172dp"
                    tools:layout_editor_absoluteY="67dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+62 XXX-XXXX-8993"
                    tools:layout_editor_absoluteX="172dp"
                    tools:layout_editor_absoluteY="112dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="West Jakarta, Indonesia"
                    tools:layout_editor_absoluteX="173dp"
                    tools:layout_editor_absoluteY="141dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:text="~Tiny hands, boundless potential.  A healthy start for a baby is a lifelong gift of love and care.~"
                    tools:layout_editor_absoluteX="70dp"
                    tools:layout_editor_absoluteY="208dp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/threads1"
                    tools:layout_editor_absoluteX="57dp"
                    tools:layout_editor_absoluteY="67dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>