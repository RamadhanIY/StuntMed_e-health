<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomepageUser">

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radius">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="314dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded">

        </ImageView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="76dp"
            android:text="BLANK"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="25dp"
            android:text="Name"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="10dp"
                android:text="Search">

            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="17dp"
                android:src="@drawable/li_search">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="787dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/radius_2">

            <Button
                android:id="@+id/feature1"
                android:layout_width="55dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="38.2dp"
                android:layout_marginTop="23dp"
                android:background="@android:color/transparent"
                android:drawableBottom="@drawable/group_415">

            </Button>

            <Button
                android:id="@+id/feature2"
                android:layout_width="55dp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="38.2dp"
                android:layout_marginTop="23dp"
                android:layout_toEndOf="@id/feature1"
                android:background="@android:color/transparent"
                android:drawableBottom="@drawable/group_415">

            </Button>

            <Button
                android:id="@+id/feature3"
                android:layout_width="55dp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="38.2dp"
                android:layout_marginTop="23dp"
                android:layout_toEndOf="@id/feature2"
                android:background="@android:color/transparent"
                android:drawableBottom="@drawable/group_415">

            </Button>

            <Button
                android:id="@+id/feature4"
                android:layout_width="55dp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="38.2dp"
                android:layout_marginTop="23dp"
                android:layout_toEndOf="@id/feature3"
                android:background="@android:color/transparent"
                android:drawableBottom="@drawable/group_415">

            </Button>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="400dp"
                android:background="@drawable/rounded_3"
                app:cardBackgroundColor="@color/bluebuttoncolor">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:iss_auto_cycle="true"
                    app:iss_corner_radius="30"
                    app:iss_delay="1000"
                    app:iss_period="1000"
                    app:iss_title_background="@color/bluemaincolor">

                </com.denzcoskun.imageslider.ImageSlider>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabAlignmentMode="center"
        app:fabAnimationMode="scale"
        app:fabCradleMargin="20dp"
        app:fabCradleRoundedCornerRadius="30dp"
        app:fabCradleVerticalOffset="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_document_scanner_24"
        app:layout_anchor="@id/bottomAppBar"
        app:layout_anchorGravity="top|center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>