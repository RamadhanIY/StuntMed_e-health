<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/gradient_profile">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="113dp"
                android:layout_height="113dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="35dp"
                android:layout_marginBottom="650dp"
                android:src="@drawable/profie_pictures"></de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="35dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="30sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+62 812 - 833 - 2832"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="West Jakarta, Indonesia"
                    android:textSize="20sp"></TextView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/quotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="200dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="30dp"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:text="Tiny hands, boundless potential. A healthy start for a baby is a lifelong gift of love and care."></TextView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quotes"
                android:layout_marginTop="66dp"
                android:orientation="vertical"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/edit_profile_parent"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_2"
                    android:drawableLeft="@drawable/parents_icons"
                    android:text="EDIT PROFILE PARENTS">

                </Button>
                <Button
                    android:id="@+id/edit_profile_baby"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_2"
                    android:drawableLeft="@drawable/baby_icons"
                    android:text="EDIT PROFILE BABY">

                </Button>
                <Button
                    android:id="@+id/settings"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_2"
                    android:drawableLeft="@drawable/settings"
                    android:text="SETTINGS">

                </Button>
                <Button
                    android:id="@+id/log_out"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_2"
                    android:drawableLeft="@drawable/logout"
                    android:text="LOG OUT">

                </Button>
            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>