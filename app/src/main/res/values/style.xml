<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemesMain" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#ABC7FF</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="colorSecondaryVariant">#718CD1</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
    </style>

    <color name="background">#FAFAFA</color>
    <style name="ProfileTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">#FFFF</item>
        <item name="colorPrimaryVariant">#000000</item>
    </style>

    <style name="NameBabyFontStyle">
        <item name="android:fontFamily">@font/nunito_bold</item> <!-- Jika Anda menggunakan font kustom -->
        <item name="android:textSize">40sp</item> <!-- Ukuran teks yang lebih besar -->
        <item name="android:textStyle">bold</item> <!-- Teks tebal -->
        <item name="android:textColor">#000000</item> <!-- Warna teks, misalnya orange -->
    </style>

    <style name="HomePageFontStyle">
        <item name="android:fontFamily">@font/roboto_reguler</item> <!-- Jika Anda menggunakan font kustom -->
        <item name="android:textSize">25sp</item> <!-- Ukuran teks yang lebih besar -->
        <item name="android:textColor">#464444</item> <!-- Warna teks, misalnya orange -->
    </style>

    <style name="ProfilePageFontStyle">
        <item name="android:fontFamily">@font/roboto_reguler</item> <!-- Jika Anda menggunakan font kustom -->
        <item name="android:textColor">#FFFFFF</item> <!-- Warna teks, misalnya orange -->
    </style>
    
    //Circular
    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>
</resources>